    android:toXScale="0.9"
    android:fromYScale="1.0"
    android:toYScale="0.9"
    android:pivotX="50%"
    android:pivotY="50%"
    android:startOffset="700"
    android:duration="8000"
    android:fillBefore="false" />
    <!--<alpha-->
    <!--android:duration="700"-->

    <!--/>-->
    <rotate
    android:fromDegrees="0"
    android:toDegrees="359"
    android:toYScale="0.0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="8000"
        android:repeatCount="infinite"
        android:repeatMode="restart"/>


</set>